{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information", // Production'da genellikle Information yeterlidir
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
      {
        "Name": "File", // Dosyaya yaz
        "Args": {
          "path": "C:/Logs/ProjectBase/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] [{MachineName}] [{ThreadId}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 30, // 30 günlük log tut
          "rollOnFileSizeLimit": true, // Size dolunca yeni dosya aç.
          "fileSizeLimitBytes": 104857600 // 100 MB limit
        }
      }
      // Production için merkezi bir loglama sistemi eklemek istersen. (Seq, Elasticsearch, Application Insights vb.)
      // {
      //   "Name": "Seq",
      //   "Args": { "serverUrl": "http://your-seq-server:5341" }
      // }
    ]
  },
  "Logging": { // Bu kısım Serilog tarafından override ediliir.
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  {
    "CorsSettings": {
      "AllowedOrigins": [
        "https://your-production-frontend.com",
        "https://another-trusted-partner.com"
      ]
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=PROD_DB_SERVER;Database=ProjectBaseDbProd;User ID=YourUser;Password=YourSecurePassword;",
  },
  "Auth": {
    "Authority": "https://your-identity-server.com",
    "ApiName": "your_production_api_name"
  },
  "ExternalServices": {
    "ProductApiBaseUrl": "https://api.external-products.com/"
  }
}