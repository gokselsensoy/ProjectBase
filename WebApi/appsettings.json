{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:/Logs/ProjectBase/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] [{MachineName}] [{ThreadId}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 30,
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 104857600
        }
      }
      // {
      //   "Name": "Seq",
      //   "Args": { "serverUrl": "http://your-seq-server:5341" }
      // }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "https://your-production-frontend.com",
      "https://another-trusted-partner.com"
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=PROD_DB_SERVER;Database=ProjectBaseDbProd;User ID=YourUser;Password=YourSecurePassword;",
    "PostgreSqlConnection": "Host=PROD_PG_HOST;Port=5432;Database=ProjectBaseDbProd;Username=YourUser;Password=YourSecurePassword" // Örnek PostgreSQL
  },
  "DatabaseProvider": "SqlServer", // <-- Veritabanı sağlayıcısını yönetmek için eklendi (Bkz. Öneri 3)
  "Auth": {
    "Authority": "https://your-identity-server.com",
    "ApiName": "your_production_api_name"
  },
  "ExternalServices": {
    "ProductApiBaseUrl": "https://api.external-products.com/"
  }
}